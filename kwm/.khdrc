# enable kwm compatibility mode
khd kwm on

# reset
cmd + ctrl + shift - q   :    brew services stop kwm
cmd + ctrl + shift - r   :    brew services restart kwm
cmd + ctrl + shift - u   :    brew services start kwm

# move focused window to screen
cmd + alt - y   :    kwmc window -m display 2
cmd + alt - h   :    kwmc window -m display 1
cmd + alt - n   :    kwmc window -m display 0

# focus screen
cmd + ctrl + shift - y            :    kwmc display -f 2
cmd + ctrl + shift - h            :    kwmc display -f 1
cmd + ctrl + shift - n            :    kwmc display -f 0

# window navigation
cmd + ctrl - k : kwmc window -f north
cmd + ctrl - h : kwmc window -f west
cmd + ctrl - j : kwmc window -f south
cmd + ctrl - l : kwmc window -f east

# move window between screens
cmd + ctrl + shift - j : kwmc window -m display prev
cmd + ctrl + shift - k : kwmc window -m display next

# toggle fullscreen
cmd + ctrl - f : kwmc window -z fullscreen

cmd + ctrl - 1 : kwmc window -m space 1
cmd + ctrl - 2 : kwmc window -m space 2
cmd + ctrl - 3 : kwmc window -m space 3
cmd + ctrl - 4 : kwmc window -m space 4
cmd + ctrl - 5 : kwmc window -m space 5
cmd + ctrl - 6 : kwmc window -m space 6
cmd + ctrl - 7 : kwmc window -m space 7
cmd + ctrl - 8 : kwmc window -m space 8

cmd + ctrl + shift - o : itunes play
cmd + ctrl + shift - p : itunes pause
cmd + ctrl + shift - w : itunes vol up
cmd + ctrl + shift - s : itunes vol down
cmd + ctrl + shift - a : itunes prev
cmd + ctrl + shift - d : itunes next
